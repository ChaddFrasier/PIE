html 
    head
        title="PIE"
        style
            include css/pips2.css
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js", type="text/javascript")
        script
            include scripts/index.js
        script(src="https://cdn.jsdelivr.net/npm/geotiff", type="text/javascript")
    body
        header.pips2header 
            .leftcontainer
                img(src="/images/usgsLogo.png", alt="HeaderLogo", class="usgsLogo")
            .centercontainer(style="text-align:center")
                img(src="/images/piedark.png", alt="PIElogo", class="pieLogo")
            .rightcontainer(style="text-align:right")
                img.headerimage(src="/images/LRO_0.png", alt="lroLogo")
                img.headerimage(src="/images/nasa-logo.png", alt="NasaLogo")
        span.maincontent
            //- Tool Box Section 
            #toolbox.toolboxcontainer
                #toolcontainer.toolscontainer
                    h3.dividerline="Tools"
                    .windowoptionsbar(style="display:flex;")
                        h4="File Tools"
                        button.windowminimizebtn='▲'
                    #filetools.filetoolsbox
                        label(for="figureoutputsize")="Choose an output size"
                        br
                        select#figsizeselect
                            each figsize in ["1500x1500", "2500x2000"]
                                option(value=fidsize) #{figsize}
                        br
                        label(for="backgroundcolor")="Select a background color"
                        br
                        input#backgroundcolor(type="color", name="backgroundcolor")

                    .windowoptionsbar(style="display:flex;")
                        h4="Editing Tools"
                        button#editminibtn.windowminimizebtn='▼'
                    #edittoolsbox.edittoolsbox.closed
                        label(for="northarrowopt")="North Button"
                        br
                        //-TODO:
                        button#northarrowopt(type="button")
                            svg.btnvectorgraphic(viewBox="0 0 25 25")
                                g(width=25, height=25, stroke-width="1")
                                    path(d="M12.5 0 L20 15 L12.5 9 L12.5 0", fill="black", stroke="black")
                                    path(d="M12.5 0 L5 15 L12.5 9 L12.5 0", fill="white", stroke="black")
                                    text(x="8.5",y="22", width="10px", height="8px", stroke="black", stroke-width="0.25")="N"
                        br
                        label(for="sunarrowbtn")="Sun Button"
                        br
                        //-TODO:
                        button#sunarrowopt(type="button")
                            svg.btnvectorgraphic(viewBox="0 0 25 25")
                                g#sungroup(width=25, height=25)
                                        circle(r="11", cx="12.5", cy="12.5", fill="transparent", stroke-width="2", stroke="black")      
                                        circle(r="4", cx="12.5", cy="12.5", fill="black")
                        br
                        label(for="observerarrowbtn")="Observer Button"
                        br
                        //-TODO:
                        button#observerarrowopt(type="button")
                            svg.btnvectorgraphic(viewBox="0 0 25 25")
                                g(width=25, height=25, stroke-width="2")
                                    path(d="M0 12.5 c11.5 6 8.5 10 25 0", fill="transparent", stroke="black")
                                    path(d="M0 12.5 c11.5 -6 8.5 -10 25 0", fill="transparent", stroke="black")
                                    ellipse(cx="12.5", cy="12.5", rx="4", ry="5", stroke="black", fill="transparent")
                                    circle(cx="12.5" cy="12.5", stroke="black",stroke-width="1",  r="2")
                        br
                        div.radio-group
                            label(for="pencilopt")="Pencil Button"
                            br
                            input#pencilopt(type="radio", value=1, name="mouseactions")
                            br
                            label(for="outlineopt")="Outline Button"
                            br
                            input#outlineopt(type="radio", value=2, name="mouseactions")
                    h3#tooldivider.dividerline="Vector Layers"
                    //- Objects Section Is below here 
                //- this is the sidebar of the tool area
                .windowsidebar
                    button.toolboxminimizebtn='◄'
                    button#addimagebtn.toolboxaddimagebtn
                        svg.btnvectorgraphic(viewBox="0 0 25 25")
                            image.svgimg(href="images/add.svg", width="25px", height="25px")
                    button#addcaptionbtn.toolboxaddcaptionbtn
                        svg.btnvectorgraphic(viewBox="0 0 25 25")
                            image.svgimg(href="images/text.svg", width="25px", height="25px")
            #editbox.editbox
                //- Other Options Button Group
                .exportoptionsbar(style="display:flex;")
                    .buttongroup
                        button='Undo'
                        button='Delete'
                        button='Draft'
                        button='Export'
                //- svg figure location
                .svgholder
                    svg#figurecontainer.imagecontainer(viewBox="0 0 1500 1500", xmlns="http://www.w3.org/2000/svg", version="1.1", height="100%")
                        style
                            include css/svg.css
        footer.mainfooter
            .leftfooter
                .footerbuttongroup
                    a(href="")='About'
                    a(href="")='Contact'
                    a(href="")='FAQ'
                    a(href="https://github.com/ChaddFrasier/PIE/issues")='Report an Issue'

            h5.rightfooter="Developed by the USGS Astrogeology Science Center"