                    h3#tooldivider.dividerline="Vector Layers"
                    //- Objects Section Is below here 
                //- this is the sidebar of the tool area
                .windowsidebar
                    button.toolboxminimizebtn='◄'
                    button#addimagebtn.toolboxaddimagebtn
                        svg.btnvectorgraphic(viewBox="0 0 25 25")
                            image.svgimg(href="images/addPlanetImage.svg", width="25px", height="25px")
                    button#addcaptionbtn.toolboxaddcaptionbtn
                        svg.btnvectorgraphic(viewBox="-1 1 27 27")
                            image.svgimg(href="images/addCaptionImage.svg", width="27px", height="27px")
            #editbox.editbox
                //- Other Options Button Group
                .exportoptionsbar(style="display:flex;")
                    .buttongroup
                        button='Undo'
                        button='Delete'
                        button='Draft'
                        button='Export'
                //- svg figure location
                
                .svgholder
                    svg#figurecontainer.imagecontainer(viewBox="0 0 1500 1500", xmlns="http://www.w3.org/2000/svg", version="1.1", width="100%", height="100%", preserveAspectRatio="xMidYMid meet")
                        defs#figdefs
                            //- markder endings can change size using markerHeight and markerWidth
                            marker(id="arrowhead" viewBox="0 0 50 50" markerWidth="5" markerHeight="5" refX="0.1" refY="24" orient="auto" )
                                path( d="M 0 0 L 50 25 L 0 50" fill="#fff" stroke-width="5")
                            marker(id="circlehead" viewBox="0 0 50 50" markerWidth="5" markerHeight="5" refX="0.1" refY="25" orient="auto")
                                circle(r="25" cx="25" cy="25" fill="#fff")
                            marker(id="squarehead"  viewBox="0 0 50 50" markerWidth="5" markerHeight="5" refX="0.1" refY="25" orient="auto")
                                polygon(points="0 0, 0 50, 50 50, 50 0 z" fill="#fff")
                        style
                            include css/svg.css

        footer.mainfooter
            .leftfooter
                .footerbuttongroup
                    a(href="/about")='Getting Started'
                    a(href="/contact")='Contact Us'
                    a(href="/faq")='FAQ'

            h5.rightfooter="Developed by the USGS Astrogeology Science Center"