extends layout

block pagescript


block content
    header.pips2header 
        .leftcontainer
            img#usgsNavIcon(src="/images/usgsLogo.png", alt="HeaderLogo", class="usgsLogo", onclick="navigateTo('https://www.usgs.gov/centers/astrogeology-science-center')")
        a.centercontainer(style="text-align:center; text-decoration: none;", href="/")
            img(src="/images/pieLogo.svg", alt="PIElogo", class="titleLogo")
        .rightcontainer(style="text-align:right")
            img.githubimage(src="/images/github.svg", alt="gitLogo")
    span.maincontent
        .mainaboutbox
            h1.basicpageheader="Contact Us"
            #contactcontent1.basicpagecontent
                .basicpagecontent
                    text="We have decided to facilitate all of our user contact through our "
                    a.descanchor(href='https://github.com/ChaddFrasier/PIE' ,target='_blank')="GitHub"
                    text=" page. File an issue to ask any and all questions about PIE including asking for new features."
                br
                h3.basicpageheader="How to File an Issue:"
                pre
                    h3
                        i="1. Click New Issue"
                    pre(style="text-align:center")
                        img.pilotstepsimage(src='/images/newissue1.PNG')
                    h3
                        i="2. Set Label(s)"  
                    pre(style="text-align:center")
                        img.pilotstepsimage(src='images/newissue2.PNG')
                    
                    h3
                        i="3. Fill Out Description Fields"
                    pre(style="text-align:center")
                        img.pilotstepsimage(src='images/newissue3.PNG')
                    
                pre
                    pre
                        h1
                            a.descanchor(href='https://github.com/ChaddFrasier/PIE/issues/new', target='_blank')="File an Issue?"
                    br
                    br
block footer
    footer.mainfooter
        .leftfooter
            .footerbuttongroup
                a(href="/about")='Getting Started'
                a.disabled(href="")='Contact Us'
                a(href="/faq")='FAQ'

        h5.rightfooter="Developed by the USGS Astrogeology Science Center"