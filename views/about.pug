extends layout

block pagescript

block content
    header.pips2header 
        .leftcontainer
            img#usgsNavIcon(src="images/usgsLogo.PNG", alt="HeaderLogo", class="usgsLogo", onclick="navigateTo('https://www.usgs.gov/centers/astrogeology-science-center')")
        a.centercontainer(style="text-align:center; text-decoration: none;", href="/")
            img(src="images/pieLogo.svg", alt="PIElogo", class="titleLogo")
        .rightcontainer(style="text-align:right")
            img.gdalimage(src="images/GDALLogo.svg", alt="GdalLogo")
    span.maincontent
        .mainaboutbox
            h2.basicpageheader="How to get started"
            #aboutcontent1.basicpagecontent
                .basicpagecontent
                    text="In Order to use this web service you need to obtain map projected images or plain still images. " 
                    text="You could obtain map projected images either by using USGS's POW web service or you can choose to process the "
                    text="IMG files from the PDS database yourself by hand but some inconsistencies with GDAL may occur. "
                br

                h2.basicpageheader="PIE Main Controls"
                pre
                    i
                        img.pilotstepsimage(alt="UI1", src="/images/UI1.png")

                //- caption object stuff

                //- Move into the image objects controls

                //- then icon controls and how to

                //- then annotation tools

                //- finish by mentioning that the export file should not have an ext

                h2.basicpageheader="Using PILOT to Find Images"
                pre
                    i
                        b="Navigate to "
                            a.desanchor(href='https://pilot.wr.usgs.gov/', target='_blank')="PILOT"
                    pre
                        pre
                            i
                                b="1. Select "
                            text="the "
                            i
                                b="Planetary Body "
                            text="you would like to search within."
                            br
                            img.pilotstepsimage(alt='pilotimage1' src='/images/pilot1.PNG')
                        pre
                            i
                                b="2. Click "
                            text="the "
                            i
                                b="Map Tab "
                            text="to see the pds map view."
                            br
                            img.pilotstepsimage(alt='pilotimage3' src='/images/pilot3.PNG')
                        pre
                            i
                                b="3. Click "
                            text="the "
                            i
                                b="Polygon Button "
                            text="to the left side of the map."
                            br
                            img.pilotstepsimage(alt='pilotimage4' src='/images/pilot4.PNG')
                        pre
                            i
                                b="4. Draw "
                            text="a "
                            i
                                b="Shape "
                            text="to cut images out of the map."
                            br
                            img.pilotstepsimage(alt='pilotimage5' src='/images/pilot5.PNG')
                        pre
                            i
                                b="5. Check the checkboxes "
                            text="for each image you want to process using "
                            i
                                b="POW."
                            br
                            img.pilotstepsimage(alt='pilotimage6' src='/images/pilot6.PNG')
                        pre
                            i
                                b="6. Click "
                            text="the POW bubble for "
                            i
                                b="Projections On the Web."
                            text=" Then click go!"
                            br
                            img.pilotstepsimage(alt='pilotimage7' src='/images/pilot7.PNG')
                            br
                            i
                                b=" 7. Click Submit."
                            br
                            img.pilotstepsimage(alt='pilotimage8' src='/images/pilot8.PNG')
                            br
                            br

block footer
    footer.mainfooter
        .leftfooter
            .footerbuttongroup
                a.disabled(href="")='Getting Started'
                a(href="/contact")='Contact Us'
                a(href="/faq")='FAQ'

        h5.rightfooter="Developed by the USGS Astrogeology Science Center"